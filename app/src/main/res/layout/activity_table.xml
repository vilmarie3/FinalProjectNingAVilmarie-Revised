<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.finalproject_ningavimarie.TableActivity"
    android:background="#FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/table1"
                android:layout_width="100dp"
                android:layout_height="103dp"
                android:src="@drawable/test" />

            <ImageView
                android:id="@+id/table2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/table8"
                android:layout_alignLeft="@+id/table1"
                android:layout_alignStart="@+id/table1"
                android:src="@drawable/test2"/>

            <ImageView
                android:id="@+id/table3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/table2"
                android:layout_alignStart="@+id/table2"
                android:layout_below="@+id/table8"
                android:src="@drawable/test3" />

            <ImageView
                android:id="@+id/table4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/table4"
                android:layout_alignStart="@+id/table4"
                android:layout_below="@+id/table4"
                android:src="@drawable/test4" />

            <ImageView
                android:id="@+id/table5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/table1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/test5" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/table6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test6" />

            <ImageView
                android:id="@+id/table7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/table8"
                android:layout_alignLeft="@+id/table1"
                android:layout_alignStart="@+id/table1"
                android:src="@drawable/test7" />

            <ImageView
                android:id="@+id/table8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/table2"
                android:layout_alignStart="@+id/table2"
                android:layout_below="@+id/table8"
                android:src="@drawable/test8" />

            <ImageView
                android:id="@+id/table9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/table4"
                android:layout_alignStart="@+id/table4"
                android:layout_below="@+id/table4"
                android:src="@drawable/test9" />

            <ImageView
                android:id="@+id/table10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/table1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/test10" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/table11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test11" />

            <ImageView
                android:id="@+id/table12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_above="@+id/table8"
                android:layout_alignLeft="@+id/table1"
                android:layout_alignStart="@+id/table1"
                android:src="@drawable/test12" />

            <ImageView
                android:id="@+id/table13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/table2"
                android:layout_alignStart="@+id/table2"
                android:layout_below="@+id/table8"
                android:src="@drawable/test13" />


            <ImageView
                android:id="@+id/table14"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/test14" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/entrance" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Confirm"
                android:text="CONFIRM"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:padding="10dp"
                android:fontFamily="@font/gentium_basic_bold"/>
        </LinearLayout>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>
