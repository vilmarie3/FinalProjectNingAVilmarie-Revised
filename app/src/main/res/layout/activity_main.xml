<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dining_room"
    tools:context="com.example.android.finalproject_ningavimarie.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="80dp"
           android:fontFamily="@font/satisfy"
           android:padding="20dp"
           android:text="@string/tc_easy"
           android:textColor="@android:color/white"
           android:textSize="80dp" />



       <TextView
           android:id="@+id/start"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:text="@string/start_the_tc_easy_way_now"
           android:textSize="20sp"
           android:background="@color/colorPrimary"
           android:fontFamily="@font/gentium_basic_bold"
           android:textColor="@color/grey"
           android:padding="20dp"
           android:layout_marginTop="50dp"/>


       <ScrollView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">




       </ScrollView>
   </LinearLayout>

</android.support.constraint.ConstraintLayout>
